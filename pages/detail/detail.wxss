/* pages/detail/detail.wxss */
.detail-box{
  width: 100vw;
  height: 100vh;
  position: fixed;
}
.detail-content{
  height: 83vh;
  width: 100vw;
}
.fl{
  display: flex;
}
.fl image{
  margin-right: 16rpx;
}
.user-box{
  display: flex;
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 0 20rpx;
  justify-content: space-between;
  width: 100vw;
}
.user-box-l {
  width: 15vw;
}
.user-box-l view{
  text-align: center;
}
.user-box-l-top{
  margin-top: 10rpx;
  color: green;
  border: 2rpx solid green;
}
.user-box-l-b{
  border: 2rpx solid orangered;
  color: orangered;
  margin-top: 15rpx;
}
.user-box-l image{
  width: 110rpx;
  height: 110rpx;
}
.user-box-r {
  width: 75vw;
}
.user-box-r-t2{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.user-box-r-t1 image{
  width: 28px;
  height: 15px;
}

.user-box-r-t2 image{
  height: 13px;
  width: 13px;
  left: -2px;
  margin-right: 4px;
}

.user-box-r-t3{
  display: flex;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx dashed #999;
}
.user-box-r-t4{
  display: flex;
  margin-top: 20rpx;
  justify-content: space-between;
}
.user-box-r-t4-img{
  display: flex;
}
.user-box-r-t4-img image{
  height: 40rpx;
  margin-right: 10rpx;
}
.user-box-r-t4-time{
  font-size: 28rpx;
}
.user-box-r-t5{
  display: flex;
  padding: 10rpx 20rpx;
  background-color: #fbe8e6;
  color: #911115;
  align-items: center;
  justify-content: space-between;
}
.user-box-r-t5 image{
  width: 16px;
  height: 16px;
  margin-right: 15rpx;
}
.user-box-r-t5-l{
  display: flex;
  align-items: center;
}
.user-box-r-t5-r{
  display: flex;
}
.border-a{
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.user-middle{
  display: flex;
  flex-direction: column;
}
.user-middle-t{
  display: flex;
  border-bottom: 2rpx dashed #999;
  justify-content: space-between;
  padding: 20rpx 20rpx;
}
.user-middle-t-text{
  color: #999;
  font-size: 28rpx;
}
.user-middle-b{
  height: 10vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-bottom-t{
  margin-bottom: 20rpx;
}
.user-box-r-t6{
  background-color: #ca0e2d;
  color: white;
  text-align: center;
  margin: 10rpx 0;
  padding: 20rpx 0;
}
.detail-content-img{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.detail-content-img image{
  width: 30%;
  margin-top: 20rpx;
  height: 150rpx;
  border: 2rpx solid #666;
}

.detail-bottom{
  display: flex;
  position: fixed;
  bottom: 0;
  z-index: 1000;
  box-sizing: border-box;
  border-top: 2rpx solid #ddd;
}
.detail-bottom-img-box{
  display: flex;
  width: 50vw;
  align-items: center;
  text-align: center;
  justify-content: space-around;

}
.detail-bottom-img-box image{
  margin-top: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.detail-bottom-text{
  width: 50vw;
  padding: 10rpx 0;
  text-align: center;
  line-height: 2;
  color: white;
  background-color: #ca0e2d;
}

.detail-bottom-b{
  display: flex;
  justify-content: space-evenly;
  border-top: 2rpx dashed #666;
  border-bottom: 2rpx dashed #666;
  padding: 16rpx;
  position: relative;
}
.detail-bottom-b-a::after{
  content: '';
  display: block;
  position: absolute;
  width: 2rpx;
  height: 100%;
  border-right: 2rpx dashed #666;
  top: 0;
  right: 50%;
}
.detail-footer{
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail-footer image{
  height: 5vh;
}
.com-back{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 200rpx;
  right: 100rpx;
  border: 2rpx solid #ddd;
  background-color: rgba(214, 236, 14, 0.842);
}
.com-back image{
  width: 100%;
  height: 100%;
}